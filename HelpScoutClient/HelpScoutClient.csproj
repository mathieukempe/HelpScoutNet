<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net451;netstandard2.0</TargetFrameworks>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseUrl>https://licenses.nuget.org/MIT</PackageLicenseUrl>
    <License>https://licenses.nuget.org/MIT</License>
    <Authors>Selz.com</Authors>
    <Company>Selz.com</Company>
    <Product>HelpScoutNet</Product>
    <Description>HelpScoutNet is a .NET class library that provides an easy-to-use interface for the helpscout.net web api v2.0</Description>
    <Version>7.1.0</Version>
    <PackageIconUrl>http://github-jobs.s3.amazonaws.com/ee1135c8-ed33-11e4-8499-9b433ae54d8f.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/Selz/HelpScoutNet</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Selz/HelpScoutNet</PackageProjectUrl>
    <PackageId>HelpScoutNet</PackageId>
    <AssemblyName>HelpScoutNet</AssemblyName>
    <RootNamespace>HelpScout</RootNamespace>
    <!--<TargetFrameworks>netstandard2.0; net461</TargetFrameworks>-->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
    <Reference Include="System.Web" />
    <Reference Include="System.Core" />
  </ItemGroup>

  <ItemGroup>

    <PackageReference Include="Microsoft.CSharp" Version="4.5.0" />

    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Conversations\Attachments\" />
    <Folder Include="Customers\Address\Models\" />
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
  </ItemGroup>



</Project>
